/**index.wxss**/

.head {
  height: 80%;
  background: #cf294d;
}

.bottom {
  height: 20%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-box {
  border-top: 2px solid #e79529;
  border-bottom: 2px solid #e79529;
  height: 150rpx;
  /* width: 500rpx; */
  font-weight: 700;
  line-height: 150rpx;
  letter-spacing: 20rpx;
}

.code-box {
  width: 120rpx;
  height: 120rpx;
}

.userinfo-nickname {
  color: #aaa;
}

.code_box {
  height: 300rpx;
  width: 300rpx;
  line-height: 60px;
  text-align: center;
  border: 1px solid #fea611;
  border-radius: 15rpx;
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center;
}

.code_box_icon {
  height: 280rpx;
  width: 280rpx;
  line-height: 60px;
  text-align: center;
  border: 1px solid #fea611;
  border-radius: 15rpx;
  background: transparent;
}

.code_box_pic {
  height: 270rpx;
  width: 270rpx;
}

.name {
  height: 20px;
  margin: -10px auto 0;
  font-size: 12px;
  padding: 0 10px;
  text-align: center;
  background: #cf294d;
}

.icon {
  font-size: 80rpx;
  height: 80rpx;
  width: 80rpx;
}
